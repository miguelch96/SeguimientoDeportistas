@model GroupSports.DL.DM.discipline

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <div class="row">
                <div class="col-xs-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Disciplinas </h4>
                        <ol class="breadcrumb p-0 m-0">
                            <li>
                                <a href="#">Zircos</a>
                            </li>
                            <li>
                                <a href="#">Forms </a>
                            </li>
                            <li class="active">
                                Form elements
                            </li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <h4 class="m-t-0 header-title"><b>Nueva Disciplina</b></h4>

                        <div class="row">
                            <div class="col-md-6">
                                @using (Html.BeginForm("Create", "Disciplines", FormMethod.Post, new { id = "popupForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <form class="form-horizontal" role="form">
                                        <div class="form-group">
                                            <label class="col-md-2 control-label">Nombre de la disciplina</label>
                                            <div class="col-md-11">
                                                @Html.EditorFor(model => model.discipline_name, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.discipline_name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-2 control-label">Descripción</label>
                                            <div class="col-md-11">
                                                @Html.EditorFor(model => model.desciption, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.desciption, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group m-b-0">
                                            <div class="col-sm-offset-3 col-sm-9">
                                                <button type="submit" value="Create" class="btn btn-info waves-effect waves-light">Crear</button>
                                            </div>
                                        </div>


                                    </form>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


