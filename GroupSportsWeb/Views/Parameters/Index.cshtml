@model GroupSportsWeb.ViewModels.LstParameterViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <div class="row">
                <div class="col-xs-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Parametro </h4>
                        <ol class="breadcrumb p-0 m-0">
                            <li>
                                <a href="#">Equipos</a>
                            </li>
                            <li>
                                <a href="#">Jugadores </a>
                            </li>
                            <li class="active">
                                Parámetros a seguir
                            </li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="table-rep-plugin">
                            <div class="table-responsive" data-pattern="priority-columns">
                                <table id="tech-companies-1" class="table  table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID del parámetro</th>
                                            <th data-priority="1">Nombre del parámetro</th>
                                            <th>Acciones</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.lstparametros)
            {


                            <tr>
                                <th> @item.id</th>
                                <td>@item.parameterName</td>
                                <td class="actions">

                                    <a href="~/Parameters/Edit/@item.id" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
                                    <a href="~/Parameters/Edit/@item.id" class="hidden on-editing cancel-row"><i class="fa fa-times"></i></a>
                                    <a href="~/Parameters/Edit/@item.id" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
                                    <a href="~/Parameters/Delete/@item.id" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                                </td>

                            </tr>
}
                                    </tbody>
                                </table>
                                <div class="form-group m-b-0">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <button type="button" class="btn btn-info waves-effect waves-light" onclick="location.href = 'Create';">Nuevo</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->

        </div> <!-- container -->
    </div> <!-- content -->
    <footer class="footer text-right">
        2016 - 2017 © Group Sports.
    </footer>
</div>


