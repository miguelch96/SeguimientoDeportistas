@model GroupSports.DL.DM.athelete

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <div class="row">
                <div class="col-xs-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Atletas </h4>
                        <ol class="breadcrumb p-0 m-0">
                            <li>
                                <a href="#">Equipos</a>
                            </li>
                            <li>
                                <a href="#">Jugadores </a>
                            </li>
                            <li class="active">
                                Atletas
                            </li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <h4 class="m-t-0 header-title"><b>Editar Atleta</b></h4>

                        <div class="row">
                            <div class="col-md-6">
                                @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()
                                <form class="form-horizontal" role="form">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.id)
                                    <div class="form-group">
                                        <label class="col-md-5 control-label">ID de la disciplina</label>
                                        <div class="col-md-11">
                                            @Html.EditorFor(model => model.disciplineId, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.disciplineId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-5 control-label">ID del Usuario</label>
                                        <div class="col-md-11">
                                            @Html.EditorFor(model => model.userId, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.userId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-5 control-label">ID del Equipo</label>
                                        <div class="col-md-11">
                                            @Html.EditorFor(model => model.teamId, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.teamId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group m-b-0">
                                        <div class="col-sm-offset-3 col-sm-9">
                                            <button type="submit" value="Create" class="btn btn-info waves-effect waves-light">Guardar</button>
                                        </div>
                                    </div>


                                </form>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

