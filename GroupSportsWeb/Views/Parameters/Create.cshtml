@model GroupSports.DL.DM.parameter

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <div class="row">
                <div class="col-xs-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Parámetro </h4>
                        <ol class="breadcrumb p-0 m-0">
                            <li>
                                <a href="#">Zircos</a>
                            </li>
                            <li>
                                <a href="#">Forms </a>
                            </li>
                            <li class="active">
                                Form elements
                            </li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <h4 class="m-t-0 header-title"><b>Nuevo Parámetro</b></h4>
                        
                        <div class="row">
                            <div class="col-md-6">
                                @using (Html.BeginForm("Create", "Parameters", FormMethod.Post, new { id = "popupForm" }))
    {
                            @Html.AntiForgeryToken()
                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Nombre del Parámetro</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.parameterName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.parameterName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group m-b-0">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <button type="submit" value="Create" class="btn btn-info waves-effect waves-light">Crear</button>
                                    </div>
                                </div>


                            </form>
}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


