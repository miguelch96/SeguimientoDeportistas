@model GroupSportsWeb.ViewModels.LstCoachViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <div class="row">
                <div class="col-xs-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Entrenadores </h4>
                        <ol class="breadcrumb p-0 m-0">
                            <li>
                                <a href="#">Atletas</a>
                            </li>
                            <li class="active">
                                <a href="#">Entrenadores </a>
                            </li>
                            <li>
                                Equipos
                            </li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="table-rep-plugin">
                            <div class="table-responsive" data-pattern="priority-columns">
                                <table id="tech-companies-1" class="table  table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nombres</th>
                                            <th data-priority="1">Apellidos</th>
                                            <th data-priority="3">Nombre de Usuario</th>
                                            <th data-priority="1">Edad</th>
                                            <th data-priority="3">Años de Experiencia</th>
                                            <th data-priority="3">UserId</th>
                                            <th data-priority="6">Email</th>
                                            <th data-priority="6">Dirección</th>
                                            <th data-priority="6">Celular</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.lstCoach)
            {


                            <tr>
                                <td> @item.firstName</td>
                                <td>@item.lastName</td>
                                <td>@item.username</td>
                                <td>@item.edad</td>
                                <td>@item.yearsOfExperience</td>
                                <td>@item.userId</td>
                                <td>@item.emailAddress</td>
                                <td>@item.address</td>
                                <td>@item.cellPhone</td>
                                <td class="actions">

                                    <a href="~/Coachs/Edit/@item.id" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
                                    <a href="~/Coachs/Edit/@item.id" class="hidden on-editing cancel-row"><i class="fa fa-times"></i></a>
                                    <a href="~/Coachs/Edit/@item.id" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
                                    <a href="~/Coachs/Delete/@item.id" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
}
                                    </tbody>
                                </table>
                                <div class="form-group m-b-0">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <button type="button" class="btn btn-info waves-effect waves-light" onclick="location.href = 'Create';">Nuevo</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->

        </div> <!-- container -->
    </div> <!-- content -->
    <footer class="footer text-right">
        2016 - 2017 © Zircos.
    </footer>
</div>
